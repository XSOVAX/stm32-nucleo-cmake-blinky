{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Debug STM32 with FreeRTOS",
        "type": "cortex-debug",
        "request": "launch",
        "servertype": "openocd",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/build/stm32f103rb_cmsis_blinky.elf",
        "device": "STM32F103RB",
        "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f1x.cfg"
        ],
        "svdFile": "${workspaceFolder}/cmsis/STM32F103xx.svd",
        "runToMain": true, 
        "preLaunchTask": "CMake Build",
        "rtos": "FreeRTOS",
        "graphVariables": [
        {
            "label": "LED State",
            "expression": "(GPIOA->ODR & (1 << 5))",
            "type": "boolean",
            "color": "red"
        }
        ]
    }
    ]
}